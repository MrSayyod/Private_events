<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <p>Ooops! You have <%= pluralize(@event.errors.count, "error") %></p>
    <ul>
      <% @event.errors.full_messages.each do |message|%>
        <li> <%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus:true %>
  </p>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <p>
    <%= f.label :date %>
    <%= f.date_field :date %>
  </p>
  <div>
    <%= f.submit %>
  </div>
  <% end%>